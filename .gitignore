cat > .gitignore << 'EOF'
# OS / editors
.DS_Store
.vscode/
.idea/
*.swp

# Python
__pycache__/
*.pyc
.venv/
.env/

# Jupyter
.ipynb_checkpoints/

# Logs
*.log
*.out
*.err

# Bioinformatics large/intermediate
data/raw/
data/processed/
results/**/tmp/
results/**/intermediate/
*.bam
*.sam
*.cram
*.bai
*.csi
*.vcf
*.vcf.gz
*.tbi
*.fasta
*.fa
*.faa
*.fastq
*.fq
*.fastq.gz
*.fq.gz

# Keep small placeholder if needed
!data/raw/.gitkeep
!data/processed/.gitkeep
EOF
# Do not track legacy Perl helpers
scripts/getAnnoFasta.pl
